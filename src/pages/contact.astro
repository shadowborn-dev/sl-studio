---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout title="Contact" description="Get in touch with Sophie Lewis for media enquiries, collaboration, speaking engagements, or general questions.">
  <!-- Hero -->
  <section class="py-24 md:py-32 px-6 md:px-12 lg:px-24">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-heading text-cream mb-8">
        Contact
      </h1>
      <p class="text-xl text-muted leading-relaxed">
        For media enquiries, collaborations, speaking engagements, or general questions — I'd like to hear from you.
      </p>
    </div>
  </section>

  <!-- Contact Info -->
  <section class="pb-24 px-6 md:px-12 lg:px-24">
    <div class="max-w-2xl mx-auto text-center">
      <div class="p-12 bg-charcoal">
        <h2 class="text-2xl font-heading text-gold mb-6">Get In Touch</h2>
        <p class="text-muted mb-8 leading-relaxed">
          The best way to reach me is by email. I respond to all genuine enquiries.
        </p>
        <a
          href="mailto:sophie.editorial@outlook.com"
          class="inline-block px-8 py-3 bg-gold text-black text-sm uppercase tracking-wide hover:bg-cream transition-all duration-300"
        >
          sophie.editorial@outlook.com
        </a>
      </div>

      <!-- What I'm Open To -->
      <div class="mt-16">
        <h3 class="text-xl font-heading text-cream mb-6">I'm Open To</h3>
        <ul class="space-y-3 text-muted text-left max-w-md mx-auto">
          <li class="flex items-start gap-3">
            <span class="text-gold mt-1">—</span>
            <span>Media enquiries and interviews</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-gold mt-1">—</span>
            <span>Podcast and panel invitations</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-gold mt-1">—</span>
            <span>Collaboration with organisations</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-gold mt-1">—</span>
            <span>Speaking engagements</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-gold mt-1">—</span>
            <span>Human Chart Cycle enquiries</span>
          </li>
        </ul>
      </div>
    </div>
  </section>
</BaseLayout>
