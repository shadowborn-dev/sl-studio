---
interface Props {
  title: string;
  description: string;
  href: string;
  linkText?: string;
  external?: boolean;
  logo?: string;
}

const { title, description, href, linkText = "Visit Site", external = true, logo } = Astro.props;
---

<div class="group p-8 bg-charcoal rounded-sm border border-charcoal hover:border-gold/30 transition-all duration-300">
  {logo && (
    <div class="mb-6 h-16 flex items-center">
      <img src={logo} alt={`${title} logo`} class="h-full w-auto max-w-[180px] object-contain opacity-80 group-hover:opacity-100 transition-opacity" />
    </div>
  )}
  <h3 class="text-2xl text-cream font-heading mb-4 group-hover:text-gold transition-colors">
    {title}
  </h3>
  <p class="text-muted mb-6 leading-relaxed">
    {description}
  </p>
  <a
    href={href}
    target={external ? "_blank" : "_self"}
    rel={external ? "noopener noreferrer" : ""}
    class="inline-flex items-center gap-2 text-gold hover:text-cream transition-colors text-sm uppercase tracking-wide"
  >
    {linkText}
    {external && (
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
      </svg>
    )}
  </a>
</div>
